{
  "manifest_version": 2,

  "name": "Sibyl",
  "description": "A customizable survey form generator with sentiment analysis on respondent feedback.",
  "version": "0.3",
  "author": "Shaina Bautista, Ken Lingatong, Mark Nolledo",
  "minimum_chrome_version": "46",

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "declarativeContent"
  ],

  "background": {
    "scripts": ["js/client.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/img/icons/sibyl_16.png",
      "32": "/img/icons/sibyl_32.png",
      "48": "/img/icons/sibyl_48.png",
      "128": "/img/icons/sibyl_128.png"
    }
  },

  "options_page": "options.html",

  "icons": {
    "16": "/img/icons/sibyl_16.png",
    "32": "/img/icons/sibyl_32.png",
    "48": "/img/icons/sibyl_48.png",
    "128": "/img/icons/sibyl_128.png"
  }
}
